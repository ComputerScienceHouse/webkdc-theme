srcdir		= @srcdir@
VPATH		= @srcdir@

CC		= @CC@
INSTALL		= @INSTALL@
RANLIB		= @RANLIB@

CFLAGS		= @CFLAGS@

CPPFLAGS	= -I. -I@top_srcdir@/src/common/include \
                   -I@top_srcdir@/src/libwebauth @CPPFLAGS@

LDLIBS		= -L@top_srcdir@/src/libwebauth -lwebauth @OPENSSL_CRYPTO_LIB@ @LIBS@

TESTS		= attrs_test base64_test key_test token_test hex_test random_test

all: $(TESTS)

attrs_test: attrs_test.o

base64_test: base64_test.o

hex_test: hex_test.o

key_test: key_test.o

token_test: token_test.o

random_test: random_test.o

clean:
	rm -f $(TESTS) *.o *~ core \#*
