# Makefile for Webauth Perl bindings
# $Id$

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

PERL = @PERL@

@SET_MAKE@

.PHONY: all clean depend install

all clean install: WebAuth3/Makefile
	cd WebAuth3 && $(MAKE) $@

depend:

WebAuth3/Makefile: WebAuth3/Makefile.PL
	cd WebAuth3 && $(PERL) Makefile.PL
