# Makefile for Webauth Perl bindings
# $Id$

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

PERL = @PERL@

@SET_MAKE@

.PHONY: all clean depend install

all clean install: WebAuth/Makefile
	cd WebAuth && $(MAKE) $@

depend:

WebAuth/Makefile: WebAuth/Makefile.PL
	cd WebAuth && $(PERL) Makefile.PL
