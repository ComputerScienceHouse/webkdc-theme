# Makefile for webkdc module
# $Id$

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
top_builddir	= @top_builddir@
VPATH		= @srcdir@

APXS		= @APXS@

APXS_CFLAGS	= @APXS_CFLAGS@
CPPFLAGS	= -I. -I$(srcdir) -I$(top_builddir) \
		  -I$(top_srcdir)/src/libwebauth @CPPFLAGS@
LDFLAGS		= @LDFLAGS@
LDLIBS		= -L$(top_builddir)src/libwebauth/.libs -lwebauth \
		  @DEPEND_LIBS@ @LIBS@

SOURCES		= mod_webkdc.c util.c acl.c

.PHONY: all clean install install-webkdc

all: mod_webkdc.o

mod_webkdc.o: $(SOURCES) mod_webkdc.h
	$(APXS) -c $(APXS_CFLAGS) $(CPPFLAGS) $(LDFLAGS) $(LDLIBS) $(SOURCES)

install:
	$(APXS) -i mod_webkdc.la

clean:
	rm -rf *.o *.la *.lo *.slo .libs *~ core \#*

depend:
	$(top_srcdir)/tools/makedepend '$(CPPFLAGS)' *.c

# DO NOT DELETE THIS LINE -- make depend depends on it.
