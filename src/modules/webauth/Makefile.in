# Makefile for webauth module
# $Id$

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
top_builddir	= @top_builddir@
VPATH		= @srcdir@

APXS		= @APXS@

APXS_CFLAGS	= @APXS_CFLAGS@
CPPFLAGS	= -I$(top_srcdir)/src/libwebauth @CPPFLAGS@ \
		  @CURL_CPPFLAGS@
LDFLAGS		= @LDFLAGS@
LDLIBS		= -L$(top_builddir)src/libwebauth/.libs -lwebauth \
		  @CURL_LIBS@ @DEPEND_LIBS@ @LIBS@

SOURCES		= mod_webauth.c util.c webkdc.c krb5.c

all: mod_webauth.o

mod_webauth.o: $(SOURCES) mod_webauth.h
	$(APXS) -c $(APXS_CFLAGS) $(CPPFLAGS) $(LDFLAGS) $(LDLIBS) $(SOURCES)

install:
	$(APXS) -i mod_webauth.la

clean:
	rm -rf *.o *.la *.lo *.slo .libs *~ core \#*

depend:
	$(top_srcdir)/tools/makedepend '$(CPPFLAGS)' *.c

# DO NOT DELETE THIS LINE -- make depend depends on it.
