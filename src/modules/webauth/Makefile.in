# Makefile for webauth module
# $Id$

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
top_builddir	= @top_builddir@
VPATH		= @srcdir@

APXS		= @APXS@

CPPFLAGS	= -I$(top_srcdir)/src/libwebauth @CPPFLAGS@ \
		  @CURL_CPPFLAGS@ @SSL_CPPFLAGS@ @KRB5_CPPFLAGS@
LDFLAGS		= @LDFLAGS@
LDLIBS		= $(top_builddir)src/libwebauth/libwebauth.la \
		  @CURL_LIBS@ @SSL_LIBS@ @KRB5_LIBS@ @LIBS@

SOURCES		= mod_webauth.c util.c webkdc.c

all: mod_webauth.o

mod_webauth.o: $(SOURCES)
	$(APXS) -c $(CPPFLAGS) $(LDFLAGS) $(LDLIBS) $(SOURCES)

install:
	$(APXS) -i mod_webauth.la

clean:
	rm -rf *.o *.la *.lo *.slo .libs *~ core \#*
