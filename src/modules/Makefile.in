# Makefile for Webauth modules
# $Id$

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

@SET_MAKE@

SUBDIRS = webauth

.PHONY: all clean depend install

all clean depend install: Makefile
	@for subdir in $(SUBDIRS); do \
	    echo "making $@ in $$subdir"; \
	    ( cd $$subdir && $(MAKE) $@ ) || exit 1; \
	done
	@if [ -d "webkdc" ] ; then \
	    @echo "making $@ in webkdc"; \
	    ( cd webkdc && $(MAKE) $@ ) || exit 1; \
	fi
